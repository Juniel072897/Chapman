---
/* src/components/GetInTouch.astro */
---

<section class="getintouch">
  <!-- Red line on top -->
  <div class="getintouch__rule"></div>

  <!-- White band with shadow -->
  <div class="getintouch__panel">
    <div class="container">
      <h2 class="getintouch__title">Get In Touch</h2>

      <form class="getintouch__row" onsubmit="event.preventDefault();">
        <input type="text"   name="name"    placeholder="Name" required />
        <input type="tel"    name="phone"   placeholder="Phone Number" required />
        <input type="email"  name="email"   placeholder="Email" required />
        <textarea name="message" rows="1" placeholder="Type Your Message  Here" required></textarea>
        <button type="submit" class="btn btn--green">Send Message</button>
      </form>
    </div>
  </div>

  <!-- subtle base line like in your screenshot -->
  <div class="getintouch__base"></div>
</section>

<style>
  :root{
    --container-max: 1360px;      /* match your header container */
    --container-pad: 16px;
    --ctl-h: 44px;
    --radius: 6px;
    --border: #d8dde6;
    --red: var(--color-primary-red, #b81e1e);
    --green: #177a3f;
    --green-hover: #0f6a34;
  }

  .container{
    width: min(100% - (var(--container-pad) * 2), var(--container-max));
    margin-inline: auto;
    padding-inline: var(--container-pad);
  }

  /* top red rule */
  .getintouch__rule{
    border-top: 3px solid var(--red);
  }

  /* panel with strong shadow (visible below) */
  .getintouch__panel{
    background:#fff;
    /* stronger & lower shadow to match screenshot */
    box-shadow: 0 10px 18px rgba(0,0,0,.12), 0 2px 4px rgba(0,0,0,.06);
    padding: 18px 0 20px;
    position: relative;
    z-index: 1;
  }

  /* faint grey line under the shadow, like the shot */
  .getintouch__base{
    height: 10px; /* space where the shadow falls */
    background:
      linear-gradient(to bottom, rgba(0,0,0,0.06), rgba(0,0,0,0.0)) 0 0 / 100% 10px no-repeat;
    border-bottom: 1px solid #ececec;
  }

  .getintouch__title{
    margin: 0 0 14px 0;
    font-weight: 800;
    letter-spacing: .2px;
  }

  .getintouch__row{
    display: grid;
    grid-template-columns: 1fr 1fr 1.2fr 2fr auto; /* Name | Phone | Email | Message | Button */
    gap: 14px;
    align-items: center;
  }

  .getintouch__row input,
  .getintouch__row textarea{
    height: var(--ctl-h);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 10px 12px;
    outline: none;
    background:#fff;
    font-size: .95rem;
  }
  .getintouch__row textarea{
    min-height: var(--ctl-h);
    resize: none; /* keep single-line bar look */
  }

  .getintouch__row input:focus,
  .getintouch__row textarea:focus{
    border-color:#9bb7ff;
    box-shadow: 0 0 0 3px rgba(59,130,246,.15);
  }

   .btn{
    display:inline-flex; align-items:center; gap:.5rem;
    padding:.8rem 2rem; border:none; border-radius:.375rem;
    text-decoration:none; cursor:pointer;
  }

.btn--green {
  background: var(--green);
  color: #fff;
  transition: background 0.25s ease, transform 0.15s ease;
}

.btn--green:hover {
  background: #3fb74c;   /* hover color */
  color: #fff;
  transform: translateY(-1px); /* optional subtle lift */
}
  /* stack nicely on smaller widths */
  @media (max-width: 1100px){
    .getintouch__row{
      grid-template-columns: 1fr;
    }
    .btn{ width: max-content; }
  }
</style>
