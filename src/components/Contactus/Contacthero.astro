<style>
:root {
  --container-pad: 16px;
  --container-max-wide: 1360px;
}

/* === Hero === */
.hero {
  position:relative;
  isolation:isolate;
  background:center/cover no-repeat url("/images/Customer-Service.jpg");
  display:flex;
  align-items:center;
  height:300px; /* shorter strip like your screenshot */
}
.hero__overlay {
  position:absolute;
  inset:0;
  background:linear-gradient(to right, rgba(37, 37, 37, 0.95) 0%, transparent 60%);
  z-index:0;
}
.hero__container {
  position:relative;
  z-index:1;
  width:min(100% - (var(--container-pad)*2), var(--container-max-wide));
  margin-inline:auto;
  padding-block:1rem; /* shorter padding top/bottom */
  display:grid;
  justify-items:start;
  text-align:left;
}
.hero__copy h1 {
  color:#fff; /* white heading */
  font-size:clamp(1.75rem,4vw,2.5rem);
  line-height:1.1;
  margin:0;
}
</style>
